<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Handwashing">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:textAlignment="center"
            android:background="#186A3B">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Every child a tap project (HANDWASHING with soap) "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/projectpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click to access Every child a tap project (HANDWASHING with soap) GALLERY"
                android:textSize="15sp"
                android:background="#ffffff"
                android:textStyle="bold"
                android:textColor="#FF0800"
                android:textAlignment="center"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1C40F"
                android:layout_margin="10dp"
                android:text="This is a hygiene project targeting children in schools. It guides them towards a culture of handwashing with soap. It is a collaborative project between SPATAP(AUASTRALIA/UK) and Amua-Africa. \n This is a project that involves provision of training and supply of hand washing and hygiene products to the children and other vulnerable community members. \n This project targets school children, both in slums and rural areas, women and the orphaned. \n This being a hygiene project the organization implements it with all the stakeholders through community trainings and awareness workshops."
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>