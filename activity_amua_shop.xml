<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AmuaShop">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:textAlignment="center"
            android:background="#186A3B">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AMUA Shops Project"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/projectpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click to access AMUA Shops Project GALLERY"
                android:textSize="15sp"
                android:background="#ffffff"
                android:textStyle="bold"
                android:textColor="#FF0800"
                android:textAlignment="center"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1C40F"
                android:layout_margin="10dp"
                android:text="This is a water, sanitation and hygiene project that targets people living in slums and rural areas that are not able to access basic, safe, clean water and sanitation facilities. \n This project involves collaborating with stakeholders and financiers to set up these facilities (water kiosks, tap stations and community toilets) for the communities. \n The organization engages the local groups and administrators to implement these community facilities at bust stops, market centers, schools, hospitals. \n The main objective is to reduce time and distance taken by women and children to access these facilities, and also to encourage the children to attend school."
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>