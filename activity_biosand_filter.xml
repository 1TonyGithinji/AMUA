<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BiosandFilter">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:textAlignment="center"
            android:background="#186A3B">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BIOSAND Filter Project"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/projectpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click to access BIOSAND Filter Project GALLERY"
                android:textSize="15sp"
                android:background="#ffffff"
                android:textStyle="bold"
                android:textColor="#FF0800"
                android:textAlignment="center"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1C40F"
                android:layout_margin="10dp"
                android:text="This is a collaborative project intended to provide biosand filters to the most volnerable community members both in rural and urban informal settlements in KENYA."
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>