<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Leadership">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:textAlignment="center"
            android:background="#186A3B">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leadership and community training workshops Project"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/projectpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click to access Leadership and community training workshops Project GALLERY"
                android:textSize="15sp"
                android:background="#ffffff"
                android:textStyle="bold"
                android:textColor="#FF0800"
                android:textAlignment="center"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1C40F"
                android:layout_margin="10dp"
                android:text="These are training sessions targeting the community members and young people on issues geared towards sustainable livelihoods, peace, health, security. \n This is also done through community workshops and forums targeting topical issues. \n It involves mentorships, capacity building, volunteerism and skills exchange programs. "
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>